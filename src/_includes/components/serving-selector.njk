<div class="covers-selector">
  <p class="covers-label">Covers</p>
  <div class="covers-buttons" id="serving-selector-group">
    {% for i in range(servings.min, servings.max + 1) %}
    <button
      type="button"
      class="covers-btn {{ 'covers-btn--active' if i == servings.default }}"
      data-value="{{ i }}"
      onclick="updateServingSize({{ i }})"
    >
      {{ i }}
    </button>
    {% endfor %}
  </div>
</div>

<script>
function updateServingSize(value) {
  // Update button states
  document.querySelectorAll('.covers-btn').forEach(btn => {
    if (parseInt(btn.dataset.value) === value) {
      btn.classList.add('covers-btn--active');
    } else {
      btn.classList.remove('covers-btn--active');
    }
  });

  // Update ingredients display
  if (typeof updateIngredientsForServings === 'function') {
    updateIngredientsForServings(value);
  }
}
</script>
