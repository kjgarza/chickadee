<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title | default("Cooking Timer") }}</title>
  
  {# OpenGraph metadata #}
  <meta property="og:title" content="{{ ogTitle | default(title) | default('Cooking Timer') }}">
  <meta property="og:description" content="{{ ogDescription | default(description) | default('Interactive cooking timer with step-by-step guidance') }}">
  <meta property="og:image" content="{{ (ogImage | default('/assets/images/og-cooking.png')) | url }}">
  <meta property="og:type" content="{{ ogType | default('website') }}">
  {% if ogUrl %}
  <meta property="og:url" content="{{ ogUrl }}">
  {% endif %}
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Roboto+Mono:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/daisyui@4.4.19/dist/full.min.css" rel="stylesheet" type="text/css" />
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="{{ '/css/styles.css' | url }}">
</head>
<body class="min-h-screen bg-base-200 text-base-content antialiased">
  <div class="container mx-auto px-4 py-6 max-w-2xl">
    <header class="mb-6">
      <div class="flex flex-wrap items-center justify-between gap-3 bg-base-100/80 border border-base-300 rounded-box px-4 py-3 shadow-sm backdrop-blur">
        <div class="flex items-center gap-3">
          <a href="{{ '/' | url }}" class="brand-title text-2xl text-primary leading-none">üç≥ Chickadee</a>
          <p class="hidden sm:block text-sm text-base-content/70">Purpose-built cooking timers and timelines.</p>
        </div>
        <div class="flex items-center gap-2">
          <a href="{{ '/about/' | url }}" class="btn btn-ghost btn-sm rounded-btn">About</a>
          <div class="dropdown dropdown-end">
            <label tabindex="0" class="btn btn-ghost btn-sm">
              üé® Theme
            </label>
            <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
              <li><a onclick="setTheme('cupcake')">Cupcake</a></li>
              <li><a onclick="setTheme('dark')">Dark</a></li>
              <li><a onclick="setTheme('light')">Light</a></li>
              <li><a onclick="setTheme('forest')">Forest</a></li>
            </ul>
          </div>
        </div>
      </div>
    </header>
    
    <main>
      {{ content | safe }}
    </main>
    
    <footer class="text-base-content opacity-70 flex w-full flex-col items-center justify-center gap-3 px-4 pt-8 pb-8 font-mono text-sm mt-8">
      <div class="flex flex-wrap items-center justify-center gap-2">
        {% for link in site.socialLinks %}
        <a class="hover:text-primary hover:underline transition-colors" target="_blank" rel="noopener noreferrer" href="{{ link.url }}">{{ link.name }}</a>
        {% if not loop.last %}<span class="text-base-content opacity-50">¬∑</span>{% endif %}
        {% endfor %}
      </div>
      <p class="text-base-content opacity-60 text-xs">Copyright ¬© {{ site.copyrightYear }} {{ site.author.name }}</p>
    </footer>
  </div>
  
  <script>
    function setTheme(theme) {
      document.documentElement.setAttribute('data-theme', theme);
      localStorage.setItem('theme', theme);
    }
    
    // Load saved theme
    const savedTheme = localStorage.getItem('theme');
    if (savedTheme) {
      document.documentElement.setAttribute('data-theme', savedTheme);
    }
  </script>
  <script src="{{ '/js/timer.js' | url }}"></script>
  <script src="{{ '/js/timeline.js' | url }}"></script>
  <script src="{{ '/js/recipe-data.js' | url }}"></script>
</body>
</html>
